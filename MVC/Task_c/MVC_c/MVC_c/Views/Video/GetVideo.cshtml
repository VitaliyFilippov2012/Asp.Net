@{
    Layout = null;
}
<style type="text/css">
    :-webkit-full-screen video {
        width: 100%;
        height: 100%;
        background: black;
    }
</style>

<script src="~/Scripts/MyVideo.js" type="text/javascript"></script>
@Html.Partial("Clip")

<div id="controller">
    <input type="button" value="Play" onclick="video_start()" />
    <input type="button" value="II" onclick="video_stop()" />
    <input type="button" value="+" onclick="video_volume_add()" />
    <input type="button" value="-" onclick="video_volume_sub()" />
</div>

<table>
    <tr>
        <td>Duration</td>
        <td id="duration"></td>
    </tr>
    <tr>
        <td>Current Time</td>
        <td id="currenttime"></td>
    </tr>
    <tr>
        <td>Volume</td>
        <td id="volume"></td>
    </tr>
</table>